---
layout: null
permalink: /search/search.json
---
[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | escape }}",
      "category" : "{{ post.category }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ post.url | relative_url }}",
      "date"     : "{{ post.date }}",
      "content"   : {{ post.content | jsonify }}
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
